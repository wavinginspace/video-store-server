{
  "name": "video-store-server",
  "version": "1.0.0",
  "description": "An app for keeping your film collection organized.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
    "start": "node src/server.js",
    "predeploy": "npm audit fix && npm run migrate:production",
    "deploy": "git push heroku master"
  },
  "keywords": [],
  "author": "Paul Baisley",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.12",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "pg-types": "^3.0.0",
    "winston": "^3.2.1",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "postgrator-cli": "^3.2.0",
    "supertest": "^4.0.2"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wavinginspace/video-store-server.git"
  },
  "bugs": {
    "url": "https://github.com/wavinginspace/video-store-server/issues"
  },
  "homepage": "https://github.com/wavinginspace/video-store-server#readme"
}
